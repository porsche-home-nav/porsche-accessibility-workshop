{
  "name": "@porsche-design-system/porsche-accessibility-workshop",
  "version": "0.0.0",
  "private": true,
  "description": "Demo application to show worst practices of accessibility",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/porscheui/porsche-kitchen-sink.git"
  },
  "author": "Dr. Ing. h.c. F. Porsche AG",
  "license": "SEE LICENSE IN https://designsystem.porsche.com",
  "contributors": [
    "Oliver Hook <oliver.hook@mhp.com>"
  ],
  "watch": {
    "build:index": {
      "patterns": [
        "public"
      ],
      "extensions": "html"
    },
    "build:css": {
      "patterns": [
        "src"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "start": "yarn build && serve ./dist",
    "start:watch": "yarn start && npm-watch",
    "build": "yarn clean && yarn build:index && yarn build:css && yarn build:assets && yarn build:node_modules",
    "build:index": "mkdir -p dist/node_modules && cp ./public/index.html ./dist",
    "build:css": "ts-node --project 'tsconfig.node.json' './scripts/build-css.ts'",
    "build:assets": "cd ./src/ && cp -R './assets' ../dist",
    "build:node_modules": "cp -R ./node_modules/@porsche-design-system ./dist/node_modules",
    "build:clean-folders": "find ./dist -maxdepth 5 -type d -name .bin -exec rm -rf {} \\;",
    "clean": "rm -rf ./dist",
    "prettier": "prettier --write '**/*.html'"
  },
  "dependencies": {
    "@porsche-design-system/assets": "^3.1.0",
    "@porsche-design-system/components-js": "2.0.0-rc.1"
  },
  "devDependencies": {
    "@porsche-design-system/utilities": "^4.0.0",
    "@types/node": "^14.14.25",
    "node-sass": "^5.0.0",
    "node-sass-tilde-importer": "^1.0.2",
    "npm-watch": "^0.7.0",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
